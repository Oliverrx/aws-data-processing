{Lambda-DynamoDB-Event-Source-Mapping-Template.JSON
    "Description": "Third Week Second Assignment DynamoBD EventSourceMapping",
    "Parameters": {
        "AccountID": {
            "Default": "823650347705",
            "Description": "AWS Account ID",
            "Type": "String"
        },
        "FunctionName": {
            "Default": "data_processing_dynamodb_lambda",
            "Description": "Lambda Function Name",
            "Type": "String"
        },
        "Account": {
            "Default": "oliver",
            "Description": "AWS Account",
            "Type": "String"
        },
        "Region": {
            "Default": "us-east-2",
            "Description": "AWS Region",
            "Type": "String"
        },
        "StreamName": {
            "Default": "Kinesis-Lambda-second-assignment",
            "Description": "Kinesis Stream Name",
            "Type": "String"
        },
        "RawBucketName": {
            "Default": "kinesislambda-second-assignment-s3bucket",
            "Description": "bucket for kinesis_lambda",
            "Type": "String"
        },
        "RoleName": {
            "Default": "Kinesis-Lambda-Role",
            "Description": "Lambda Function Role Name",
            "Type": "String"
        }
    },
    "Resources": {
        "NewDynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "Id",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "Name",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PROVISIONED",
                "ContributorInsightsSpecification": {
                    "Enabled": true
                },
                "KeySchema": [
                    {
                        "AttributeName": "Id",
                        "KeyType": "HASH" 
                    },
                    {
                        "AttributeName": "Name", 
                        "KeyType": "RANGE" 
                    }
                ],
                "GlobalSecondaryIndexes": [
                    {
                        "IndexName": "GSI",
                        "KeySchema": [
                            {
                                "AttributeName": "Id",
                                "KeyType": "HASH"
                            }
                        ],
                        "Projection": {
                            "ProjectionType": "KEYS_ONLY"
                        },
                        "ProvisionedThroughput": {
                            "ReadCapacityUnits": 10,
                            "WriteCapacityUnits": 10
                        }
                    }
                ],
                "PointInTimeRecoverySpecification": {
                    "PointInTimeRecoveryEnabled": true
                },
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": 10,
                    "WriteCapacityUnits": 10
                },
                "StreamSpecification": {
                    "StreamViewType": "NEW_AND_OLD_IMAGES"
                },
                "TableClass": "STANDARD",
                "TableName": "Staff",
                "Tags": [
                    {
                        "Key": "Developer",
                        "Value": "A"
                    },
                    {
                        "Key": "Department",
                        "Value": "Eng"
                    },
                    {
                        "Key": "Project",
                        "Value": "DynamoDB"
                    },
                    {
                        "Key": "SupportEmail",
                        "Value": "xxx@gmail.com"
                    },
                    {
                        "Key": "Version",
                        "Value": 1.0
                    }
                ]
            }
        },
        "DynamoDBEventSourceMapping": {
            "Type": "AWS::Lambda::EventSourceMapping",
            "DependsOn": [
                "NewDynamoDBTable",
                "DynmoDBLambda"
            ],
            "Properties": {
                "BatchSize": 150,
                "Enabled": true,
                "EventSourceArn": {
                    "Fn::GetAtt": [
                        "NewDynamoDBTable",
                        "StreamArn"
                    ]
                },
                "FunctionName": {
                    "Fn::GetAtt": [
                        "DynmoDBLambda",
                        "Arn"
                    ]
                },
                "MaximumBatchingWindowInSeconds": 5,
                "MaximumRetryAttempts": 5,
                "ParallelizationFactor": 10,
                "StartingPosition": "LATEST",
                "FilterCriteria": {
                    "Filters": [
                        {
                            "Pattern": "{ \"eventName\": [\"MODIFY\"]}"
                        },
                        {
                            "Pattern": "{ \"eventName\": [\"REMOVE\"]}"
                        }
                    ]
                }
            }
        },
        "DynmoDBLambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Architectures": [
                    "x86_64"
                ],
                "Code": {
                    "S3Bucket": "assignment4-object-test",
                    "S3Key": "lambda_function.zip"
                },
                "Description": "Dynamodb lambda using CFT",
                "EphemeralStorage": {
                    "Size": 1024
                },
                "FunctionName": {
                    "Ref": "FunctionName"
                },
                "Handler": "lambda_function.lambda_handler",
                "MemorySize": 128,
                "PackageType": "Zip",
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.10",
                "Tags": [
                    {
                        "Key": "Developer",
                        "Value": "Money"
                    },
                    {
                        "Key": "SupportEmail",
                        "Value": "money@gmail.com"
                    }
                ],
                "Timeout": 60
            }
        },
        "LambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/",
                "Policies": [
                    {
                        "PolicyName": "DynamoDBAccess",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Sid": "LogAccess",
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:*"
                                    ],
                                    "Resource": "arn:aws:logs:*:*:*"
                                },
                                {
                                    "Sid": "SESAccess",
                                    "Effect": "Allow",
                                    "Action": [
                                        "ses:*"
                                    ],
                                    "Resource": "*"
                                },
                                {
                                    "Sid": "DynamoDBAccess",
                                    "Action": [
                                        "dynamodb:GetRecords",  
                                        "dynamodb:GetShardIterator",
                                        "dynamodb:DescribeStream",
                                        "dynamodb:ListStreams"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": {
                                        "Fn::GetAtt": [
                                            "MyDynamoDBTable",
                                            "StreamArn"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ],
                "RoleName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Account"
                            },
                            {
                                "Ref": "AWS::Region"
                            },
                            "DynamoDB-Lambda-Role"
                        ]
                    ]
                }
            }
        }
    }
}
