{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Fourth Week Assignment Kinesis Lambda EventSourceMapping to DynamoDB",
    "Parameters": {
        "AccountID": {
            "Default": "823650347705",
            "Description": "AWS Account ID",
            "Type": "String"
        },
        "FunctionName": {
            "Default": "data_processing_kinesis_lambda_dynamodb",
            "Description": "Lambda Function Name",
            "Type": "String"
        },
        "Account": {
            "Default": "oliver",
            "Description": "AWS Account",
            "Type": "String"
        },
        "Region": {
            "Default": "us-east-2",
            "Description": "AWS Region",
            "Type": "String"
        },
        "StreamName": {
            "Default": "Kinesis-Lambda-third-assignment",
            "Description": "Kinesis Stream Name",
            "Type": "String"
        },
        "RawBucketName": {
            "Default": "kinesislambda-assignment-dynamodb",
            "Description": "bucket for kinesis_lambda",
            "Type": "String"
        },
        "RoleName": {
            "Default": "Kinesis-Lambda-DynamoDB-Role",
            "Description": "Lambda Function Role Name",
            "Type": "String"
        }
    },
    "Resources": {
        "FourthWeekAssignmentKinesisStream": {
            "Type" : "AWS::Kinesis::Stream",
             "Properties" : {
             "Name" : {
                "Ref": "StreamName"
            },
             "RetentionPeriodHours" : 24,
             "ShardCount" : 1,
             "StreamModeDetails" : {
                "StreamMode" : "PROVISIONED"
            },
             "Tags": [
                {
                    "Key": "Developer",
                    "Value": "ABC"
                },
                {
                    "Key": "Department",
                    "Value": "DEV"
                },
                {
                    "Key": "SupportEmail",
                    "Value": "ABC@gmail.com"
                },
                {
                    "Key": "SupportContact",
                    "Value": "123-456-7890"
                }
            ]
            }
        },
        "KinesisEventSourceMapping": {
            "Type" : "AWS::Lambda::EventSourceMapping",
            "DependsOn": [
                "FourthWeekAssignmentKinesisLambdaDynamoDB",
                "FourthWeekAssignmentKinesisStream"
            ],
            "Properties" : {
                "BatchSize": 150,
                "Enabled" : true,
                "EventSourceArn" : {
                    "Fn::GetAtt": [
                        "FourthWeekAssignmentKinesisStream",
                        "Arn"
                    ]
                },
                "FunctionName" : {
                    "Fn::GetAtt": [
                        "FourthWeekAssignmentKinesisLambdaDynamoDB",
                        "Arn"
                    ]
                },
                "MaximumBatchingWindowInSeconds": 1,
                "ParallelizationFactor": 10,
                "StartingPosition": "LATEST"
            }
        },
        "FourthWeekAssignmentKinesisLambdaDynamoDB": {
            "Type" : "AWS::Lambda::Function",
            "Properties" : {
                "Architectures" : [ "x86_64" ],
                "Code" : {
                    "S3Bucket" : "assignment4-object-test",
                    "S3Key" : "Lambda_Function_Template.zip"
                },
                "Description" : "Kinesis Lambda DynamoDB using CFT",
                "EphemeralStorage" : {
                    "Size" : 1024
                },
                "FunctionName" : {
                    "Ref": "FunctionName"
                },
                "Handler" : "Lambda_Function_Template.lambda_handler",
                "MemorySize" : 128,
                "PackageType" : "Zip",
                "Role" : {
                    "Fn::GetAtt":[
                        "KinesisLambdaRole",
                        "Arn"
                    ]
                },
                "Runtime" : "python3.10",
                "Tags" : [ 
                    {
                        "Key" : "Developer",
                        "Value" :"Jake"
                    },
                    {
                        "Key" : "SupportEmail",
                        "Value" :"aaaa@gmail.com"
                    }
                ],
                "Timeout" : 60
              }
        },
        "KinesisLambdaRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{ 
                        "Effect": "Allow", 
                        "Principal": {
                            "Service": ["lambda.amazonaws.com"]
                        }, 
                        "Action": ["sts:AssumeRole"] 
                    }]
                },
                "Path": "/",
                "Policies": [{
                  "PolicyName": "KinesisAccess",
                  "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                    { 
                        "Sid" : "LogAccess",
                        "Effect": "Allow", 
                        "Action": ["logs:*"], 
                        "Resource": "arn:aws:logs:*:*:*"
                    },
                    {
                        "Sid" : "ReadAccess",
                        "Action" : [ 
                           "s3:GetObject",
                           "s3:GetObjectVersion",
                           "s3:PutObject"
                       ],
                        "Effect" : "Allow",
                        "Resource" : [
                            { 
                                "Fn::Join" : [
                                    "", [ "arn:aws:s3:::", {
                                        "Fn::Join": [
                                            "-",
                                            [
                                                {
                                                    "Ref": "Account"
                                                },
                                                {
                                                    "Ref": "Region"
                                                },
                                                {
                                                    "Ref": "RawBucketName"
                                                }
                                            ]
                                        ]
                                    }]
                                ]
                            },
                            {
                                "Fn::Join" : [
                                    "", [ "arn:aws:s3:::", {
                                        "Fn::Join": [
                                            "-",
                                            [
                                                {
                                                    "Ref": "Account"
                                                },
                                                {
                                                    "Ref": "Region"
                                                },
                                                {
                                                    "Ref": "RawBucketName"
                                                }
                                            ]
                                        ]
                                    }, 
                                    "/*" 
                                    ]
                                ] 
                            }
                        ]
                    },
                    {
                        "Sid": "KinesisPermission",
                        "Effect": "Allow",
                        "Action": [
                            "kinesis:*"
                        ],
                        "Resource":  {
                            "Fn::GetAtt": [
                                "FourthWeekAssignmentKinesisStream",
                                "Arn"
                            ]
                        }
                    },
                    { 
                        "Sid" : "DynamoDBAccess",
                        "Effect": "Allow", 
                        "Action": [
                            "dynamodb:BatchWriteItem",
                            "dynamodb:PutItem",
                            "dynamodb:UpdateItem"
                        ], 
                        "Resource": "arn:aws:dynamodb:us-east-2:823650347705:table/Student"
                    }
                    ]
                  }
                }],
                "RoleName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Account"
                            },
                            {
                                "Ref": "AWS::Region"
                            },
                            {
                                "Ref": "RoleName"
                            }
                        ]
                    ]
                }
            }
        },
        "KinesisLambdaDynamoDBAssignmentS3bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Account"
                            },
                            {
                                "Ref": "Region"
                            },
                            {
                                "Ref": "RawBucketName"
                            }
                        ]
                    ]
                },
                "ObjectLockConfiguration": {
                    "ObjectLockEnabled": "Enabled",
                    "Rule": {
                        "DefaultRetention": {
                            "Mode": "COMPLIANCE",
                            "Days": 1
                        }
                    }
                },
                "PublicAccessBlockConfiguration": {
                    "BlockPublicAcls": false,
                    "BlockPublicPolicy": false,
                    "IgnorePublicAcls": false,
                    "RestrictPublicBuckets": false
                },
                "ObjectLockEnabled": true,
                "Tags": [
                    {
                        "Key": "Developer",
                        "Value": "ABC"
                    },
                    {
                        "Key": "Department",
                        "Value": "DEV"
                    },
                    {
                        "Key": "SupportEmail",
                        "Value": "Exxx@gmail.com"
                    },
                    {
                        "Key": "SupportContact",
                        "Value": "123-456-7890"
                    }
                ],
                "VersioningConfiguration": {
                    "Status": "Enabled"
                }
            }
        },
        "KinesisLambdaDynamoDBAssignmentBucketPolicy": {
            "Type": "AWS::S3::BucketPolicy",
            "Properties": {
                "Bucket": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "Account"
                            },
                            {
                                "Ref": "Region"
                            },
                            {
                                "Ref": "RawBucketName"
                            }
                        ]
                    ]
                },
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Action": [
                                "s3:GetObject",
                                "s3:PutObject"
                            ],
                            "Effect": "Allow",
                            "Resource": [
                                {
                                    "Fn::GetAtt": [
                                        "KinesisLambdaDynamoDBAssignmentS3bucket",
                                        "Arn"
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "arn:aws:s3:::",
                                            {
                                                "Fn::Join": [
                                                    "-",
                                                    [
                                                        {
                                                            "Ref": "Account"
                                                        },
                                                        {
                                                            "Ref": "Region"
                                                        },
                                                        {
                                                            "Ref": "RawBucketName"
                                                        }
                                                    ]
                                                ]
                                            },
                                            "/*"
                                        ]
                                    ]
                                }
                            ],
                            "Principal": "*"
                        }
                    ]
                }
            }
        }
    }
}